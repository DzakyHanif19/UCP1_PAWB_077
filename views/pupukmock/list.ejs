<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Daftar Pupuk</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.5.0/font/bootstrap-icons.min.css">
  <style>
    body {
      background-color: #f8f9fa;
    }
    .container {
      max-width: 800px;
    }
    .card {
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .btn-success, .btn-primary, .btn-info {
      border: none;
      transition: background-color 0.3s ease;
    }
    .btn-success:hover {
      background-color: #45a049;
    }
    .btn-primary:hover, .btn-info:hover {
      background-color: #6c757d;
    }
    .btn-warning:hover, .btn-danger:hover {
      opacity: 0.8;
    }
    table {
      background-color: #ffffff;
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center mb-4 text-primary">Daftar Pupuk</h1>

    <div class="d-flex justify-content-between mb-3">
      <a href="/pupukmockup/add" class="btn btn-success"><i class="bi bi-plus-circle"></i> Tambah Pupuk</a>
      <div>
        <a href="/bibitmockup" class="btn btn-primary"><i class="bi bi-list-ul"></i> List Bibit</a>
        <a href="/pupukmysql" class="btn btn-info"><i class="bi bi-database"></i> Ke Database Pupuk MySQL</a>
      </div>
    </div>

    <% if (pupuk && pupuk.length > 0) { %>
      <div class="card">
        <table class="table table-bordered table-striped mb-0">
          <thead class="table-dark">
            <tr>
              <th>ID</th>
              <th>Nama</th>
              <th>Jenis</th>
              <th>Aksi</th>
            </tr>
          </thead>
          <tbody>
            <% pupuk.forEach(item => { %>
              <tr>
                <td><%= item.id %></td>
                <td><%= item.nama %></td>
                <td><%= item.jenis %></td>
                <td>
                  <a href="/pupukmockup/edit/<%= item.id %>" class="btn btn-warning btn-sm"><i class="bi bi-pencil-square"></i> Edit</a>
                  <a href="/pupukmockup/delete/<%= item.id %>" onclick="return confirm('Apakah Anda yakin ingin menghapus pupuk ini?')" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i> Hapus</a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <p class="text-center">Tidak ada data pupuk.</p>
    <% } %>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
