<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Daftar Bibit</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.5.0/font/bootstrap-icons.min.css">
  <style>
    body {
      background-color: #f8f9fa;
    }
    .container {
      max-width: 800px;
    }
    .table {
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .btn-success {
      background-color: #4CAF50;
      border: none;
      transition: background-color 0.3s ease;
    }
    .btn-success:hover {
      background-color: #45a049;
    }
    .btn-primary, .btn-info {
      border: none;
      transition: background-color 0.3s ease;
    }
    .btn-primary:hover {
      background-color: #0056b3;
    }
    .btn-info {
      color: #fff;
    }
    .btn-warning {
      background-color: #ffc107;
      border: none;
      color: #212529;
      transition: background-color 0.3s ease;
    }
    .btn-warning:hover {
      background-color: #e0a800;
    }
    .btn-danger {
      background-color: #dc3545;
      border: none;
      transition: background-color 0.3s ease;
    }
    .btn-danger:hover {
      background-color: #c82333;
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center mb-4 text-primary">Daftar Bibit</h1>

    <div class="d-flex justify-content-between mb-3">
      <a href="/bibitmockup/add" class="btn btn-success"><i class="bi bi-plus-circle"></i> Tambah Bibit</a>
      <a href="/pupukmockup" class="btn btn-primary"><i class="bi bi-list"></i> List Pupuk</a>
      <a href="/bibitmysql" class="btn btn-info"><i class="bi bi-database"></i> Ke Database Bibit MySQL</a>
    </div>

    <% if (bibitmockup && bibitmockup.length > 0) { %>
      <table class="table table-bordered table-striped">
        <thead class="table-primary">
          <tr>
            <th>ID</th>
            <th>Nama</th>
            <th>Jenis</th>
            <th>Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% bibitmockup.forEach(item => { %>
            <tr>
              <td><%= item.id %></td>
              <td><%= item.nama %></td>
              <td><%= item.jenis %></td>
              <td>
                <a href="/bibitmockup/edit/<%= item.id %>" class="btn btn-warning btn-sm"><i class="bi bi-pencil-square"></i> Edit</a> 
                <a href="/bibit/delete/<%= item.id %>" onclick="return confirm('Apakah Anda yakin ingin menghapus bibit ini?')" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i> Hapus</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <p class="text-center">Tidak ada data bibit.</p>
    <% } %>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
