<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Daftar Pupuk</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.5.0/font/bootstrap-icons.min.css">
  <style>
    body {
      background-color: #f8f9fa;
    }
    .container {
      max-width: 800px;
    }
    .card {
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .btn-primary, .btn-secondary, .btn-info {
      border: none;
      transition: background-color 0.3s ease;
    }
    .btn-primary:hover {
      background-color: #0056b3;
    }
    .btn-secondary:hover {
      background-color: #6c757d;
    }
    .btn-info:hover {
      background-color: #138496;
    }
    .table th {
      background-color: #343a40;
      color: white;
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center mb-4 text-primary">Daftar Pupuk</h1>

    <!-- Tombol Navigasi -->
    <div class="text-center mb-4">
      <a href="/pupukmysql/add" class="btn btn-primary me-2"><i class="bi bi-plus-circle"></i> Tambah Pupuk</a>
      <a href="/bibitmysql/" class="btn btn-secondary me-2"><i class="bi bi-arrow-left"></i> Ke Bibit</a>
      <a href="/pupukmockup" class="btn btn-info"><i class="bi bi-database"></i> Pupuk Mockup Database</a>
    </div>

    <!-- Tabel Daftar Pupuk -->
    <div class="card p-4 rounded bg-white shadow-sm">
      <% if (pupuk && pupuk.length > 0) { %>
        <table class="table table-bordered table-striped">
          <thead>
            <tr>
              <th>ID</th>
              <th>Nama Pupuk</th>
              <th class="text-center">Aksi</th>
            </tr>
          </thead>
          <tbody>
            <% pupuk.forEach(item => { %>
              <tr>
                <td><%= item.id %></td>
                <td><%= item.namapupuk %></td>
                <td class="text-center">
                  <a href="/pupukmysql/edit/<%= item.id %>" class="btn btn-warning btn-sm me-1"><i class="bi bi-pencil-square"></i> Edit</a> 
                  <a href="/pupukmysql/delete/<%= item.id %>" class="btn btn-danger btn-sm" onclick="return confirm('Hapus data ini?')"><i class="bi bi-trash"></i> Hapus</a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } else { %>
        <p class="text-center">Tidak ada data pupuk.</p>
      <% } %>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
